<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.Common.JoinResultActivity">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_background_1"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="24dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="118dp"
                        android:layout_height="34dp"
                        android:background="@drawable/logo_r"
                        android:contentDescription="TODO" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/pretendardblack"
                        android:text="에이아이오디토리(주)"
                        android:textColor="@color/white"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendardbold"
                        android:text="HearFi"
                        android:textColor="@color/white"
                        android:textSize="27dp"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendardbold"
                        android:text="누구나,언제든,어디서든지\n초간편 청력테스트"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="17dp"></TextView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="250dp"
                android:background="@drawable/login_form"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_marginTop="50dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendardbold"
                        android:textColor="@color/blue"
                        android:textAlignment="center"
                        android:textSize="30dp"
                        android:text="회원가입이">
                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendardbold"
                        android:textColor="@color/blue"
                        android:textAlignment="center"
                        android:textSize="30dp"
                        android:text="완료되었습니다">
                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="36dp"
                    android:layout_marginEnd="36dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendardbold"
                        android:textColor="@color/gray"
                        android:textAlignment="center"
                        android:textSize="25dp"
                        android:text="아이디는 ">
                    </TextView>

                    <TextView
                        android:id="@+id/TextJoinResultPhoneId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendardbold"
                        android:textColor="@color/blue"
                        android:textAlignment="center"
                        android:textSize="25dp"
                        android:text="01012345678">
                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="36dp"
                    android:layout_marginEnd="36dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendardbold"
                        android:textColor="@color/gray"
                        android:textAlignment="center"
                        android:textSize="25dp"
                        android:text="비밀번호는 ">
                    </TextView>

                    <TextView
                        android:id="@+id/TextJoinResultPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendardbold"
                        android:textColor="@color/blue"
                        android:textAlignment="center"
                        android:textSize="25dp"
                        android:text="123456">
                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendardbold"
                        android:textColor="@color/gray"
                        android:textAlignment="center"
                        android:textSize="25dp"
                        android:text=" 입니다">
                    </TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="36dp"
                    android:layout_marginEnd="36dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendardbold"
                        android:textColor="@color/gray"
                        android:textAlignment="center"
                        android:textSize="18dp"
                        android:text=" 아이디는 휴대폰 번호,  ">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendardbold"
                        android:textColor="@color/gray"
                        android:textAlignment="center"
                        android:textSize="18dp"
                        android:text=" 비밀번호는 생년월일 6자리로 ">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendardbold"
                        android:textColor="@color/gray"
                        android:textAlignment="center"
                        android:textSize="18dp"
                        android:text=" 자동생성 됩니다. ">
                    </TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="36dp"
                    android:layout_marginEnd="36dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="36dp"
                    android:layout_marginEnd="36dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/AppBtnJoinResultGoLogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:background="@drawable/blue_button"
                        android:fontFamily="@font/pretendardbold"
                        android:text="로그인하러 가기"
                        android:textSize="17dp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginStart="36dp"
                    android:layout_marginEnd="36dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </FrameLayout>
    </ScrollView>












</androidx.constraintlayout.widget.ConstraintLayout>