<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.History.HistoryListActivity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"

            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="-1dp">
            <ImageButton
                android:id="@+id/imgBtnBack"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="start"
                android:layout_marginEnd="20dp"
                android:layout_weight="0"
                android:background="@color/white"
                android:padding="13dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/backbtn" />
            <LinearLayout
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/pretendardextrabold"
                    android:textColor="@color/blue"
                    android:textSize="25dp"
                    android:text="HearFi"></TextView>
            </LinearLayout>

            <ImageButton
                android:id="@+id/imgBtnHome"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:layout_marginStart="20dp"
                android:layout_weight="0"
                android:background="@color/white"
                android:padding="13dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/homebtn" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/result_gray_background"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="0.4"
                android:layout_marginStart="16dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/userID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="김연우님"
                    android:textSize="19dp"
                    android:textAlignment="viewStart"
                    android:fontFamily="@font/pretendardextrabold"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="청능 테스트 결과를 확인해 보세요!"
                    android:textSize="19dp"
                    android:textAlignment="viewStart"
                    android:fontFamily="@font/pretendardextrabold"></TextView>
            </LinearLayout>
            <ImageView
                android:layout_gravity="center"
                android:layout_marginEnd="16dp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/mytest_icon">
            </ImageView>

        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="80dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/my_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </ScrollView>
            <LinearLayout
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#d9d9d9"
                android:orientation="vertical">
                <LinearLayout
                    android:background="@drawable/dropshadow"
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/HomeLayout"
                        android:background="@drawable/gray_layout"
                        android:layout_weight="0.25"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/HomeImageView"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="@drawable/home"></ImageView>
                        <TextView
                            android:id="@+id/HomeTextView"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendardbold"
                            android:textColor="#a6a6a6"
                            android:textSize="14dp"
                            android:text="홈"></TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/PtaLayout"
                        android:background="@drawable/gray_layout"
                        android:layout_weight="0.25"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/PtaImageView"
                            android:layout_marginTop="8dp"
                            android:layout_gravity="center"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="@drawable/pta"></ImageView>
                        <TextView
                            android:id="@+id/PtaTextView"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendardbold"
                            android:textColor="#A6A6A6"
                            android:textSize="14dp"
                            android:text="PTA 테스트"></TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/WrsLayout"
                        android:background="@drawable/gray_layout"
                        android:layout_weight="0.25"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/WrsImageView"
                            android:layout_marginTop="8dp"
                            android:layout_gravity="center"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="@drawable/wrs"></ImageView>
                        <TextView
                            android:id="@+id/WrsTextView"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendardbold"
                            android:textColor="#A6A6A6"
                            android:textSize="14dp"
                            android:text="WRS 테스트"></TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/TestLayout"
                        android:background="@drawable/gray_layout"
                        android:layout_weight="0.25"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/TestImageView"
                            android:layout_marginTop="8dp"
                            android:layout_gravity="center"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="@drawable/test_active"></ImageView>
                        <TextView
                            android:id="@+id/TestTextView"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendardbold"
                            android:textColor="#0181F8"
                            android:textSize="14dp"
                            android:text="My 테스트"></TextView>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>