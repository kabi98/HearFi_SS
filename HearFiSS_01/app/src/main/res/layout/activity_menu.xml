<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.Common.MenuActivity"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"

            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="-1dp">
            <ImageButton
                android:id="@+id/imgBtnBack"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="start"
                android:layout_marginEnd="20dp"
                android:layout_weight="0"
                android:background="@color/white"
                android:padding="13dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/backbtn" />
            <LinearLayout
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/pretendardextrabold"
                    android:text="HearFi SS"
                    android:textAlignment="center"
                    android:textColor="@color/blue"
                    android:textSize="25sp"></TextView>
            </LinearLayout>

            <ImageButton
                android:id="@+id/imgBtnHome"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:layout_marginStart="20dp"
                android:layout_weight="0"
                android:background="@color/white"
                android:padding="13dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/homebtn" />
        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintVertical_bias="1.0">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/result_gray_background"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="0.4"
                            android:layout_marginStart="16dp"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/userID"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:text="김연우님"
                                android:textSize="18dp"
                                android:textAlignment="viewStart"
                                android:fontFamily="@font/pretendardextrabold"></TextView>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="청능 테스트 결과를 확인해 보세요!"
                                android:textSize="18dp"
                                android:textAlignment="viewStart"
                                android:fontFamily="@font/pretendardextrabold"></TextView>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="53dp"
                            android:layout_height="49dp"
                            android:layout_gravity="center"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/doctor_icon"></ImageView>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/custom_menu_background_blue">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="8dp"
                                android:paddingTop="22dp"
                                android:text="어음 청취 역치 테스트(SRT)"
                                android:fontFamily="@font/pretendardextrabold"
                                android:textColor="@color/blue"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                tools:ignore="MissingConstraints"></TextView>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="8dp"
                                android:paddingTop="8dp"
                                android:fontFamily="@font/pretendardregular"
                                android:textColor="@color/gray2"
                                android:text="청력의 가장 기본적인 테스트 방법입니다."

                                android:textSize="12dp"
                                android:textStyle="bold"
                                tools:ignore="MissingConstraints">
                            </TextView>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:layout_marginBottom="16dp"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    tools:ignore="MissingConstraints">

                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="8dp"
                                        android:layout_marginBottom="24dp">

                                        <TextView
                                            android:id="@+id/textView5"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:paddingStart="8dp"
                                            android:textSize="14dp"
                                            android:text="소요 시간 : 약 10분"
                                            android:fontFamily="@font/pretendardextrabold"
                                            android:textColor="@color/gray2"

                                            tools:ignore="MissingConstraints" />


                                    </androidx.constraintlayout.widget.ConstraintLayout>

                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginEnd="8dp">
                                        <androidx.appcompat.widget.AppCompatButton
                                            android:id="@+id/imgBtnStartSrt"
                                            android:layout_width="95dp"
                                            android:layout_height="48dp"
                                            android:background="@drawable/blue_button"
                                            android:text="시작하기"
                                            android:textColor="@color/white"
                                            android:textSize="14dp"
                                            android:textStyle="bold"
                                            app:layout_constraintEnd_toEndOf="parent"></androidx.appcompat.widget.AppCompatButton>
                                    </androidx.constraintlayout.widget.ConstraintLayout>
                                </LinearLayout>
                            </androidx.constraintlayout.widget.ConstraintLayout>


                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/custom_menu_background_green">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pretendardextrabold"
                                android:paddingStart="8dp"
                                android:paddingTop="22dp"
                                android:text="문장 인지도 테스트(SRS)"
                                android:textColor="@color/green"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                tools:ignore="MissingConstraints"
                                tools:layout_editor_absoluteX="0dp"
                                tools:layout_editor_absoluteY="0dp"></TextView>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="8dp"
                                android:paddingTop="8dp"
                                android:text="일상적인 의사소통 능력을 알아보기 위한 테스트 방법입니다."

                                android:fontFamily="@font/pretendardregular"
                                android:textColor="@color/gray2"
                                android:textSize="12dp"
                                android:textStyle="bold"
                                tools:ignore="MissingConstraints">
                            </TextView>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:layout_marginBottom="16dp"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    tools:ignore="MissingConstraints">

                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="8dp"
                                        android:layout_marginBottom="24dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:paddingStart="8dp"
                                            android:textSize="14dp"
                                            android:text="소요 시간 : 약 10분"
                                            android:fontFamily="@font/pretendardextrabold"
                                            android:textColor="@color/gray2"

                                            android:textStyle="bold"
                                            tools:ignore="MissingConstraints" />


                                    </androidx.constraintlayout.widget.ConstraintLayout>

                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginEnd="8dp">
                                        <androidx.appcompat.widget.AppCompatButton
                                            android:id="@+id/imgBtnStartSrs"
                                            android:layout_width="95dp"
                                            android:layout_height="48dp"
                                            android:background="@drawable/green_button"
                                            android:text="시작하기"
                                            android:textColor="@color/white"
                                            android:textSize="14dp"
                                            android:textStyle="bold"
                                            app:layout_constraintEnd_toEndOf="parent"></androidx.appcompat.widget.AppCompatButton>
                                    </androidx.constraintlayout.widget.ConstraintLayout>
                                </LinearLayout>
                            </androidx.constraintlayout.widget.ConstraintLayout>


                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/custom_menu_background_blue">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="8dp"
                                android:paddingTop="22dp"
                                android:text="테스트 결과 확인하기"
                                android:fontFamily="@font/pretendardextrabold"
                                android:textColor="@color/blue"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                tools:ignore="MissingConstraints"></TextView>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="8dp"
                                android:paddingTop="8dp"
                                android:text="사용자의 테스트 기록을 확인하실 수 있습니다."
                                android:fontFamily="@font/pretendardregular"
                                android:textColor="@color/gray2"
                                android:textSize="12dp"
                                android:textStyle="bold"
                                tools:ignore="MissingConstraints">
                            </TextView>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:layout_marginBottom="16dp"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    tools:ignore="MissingConstraints">

                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="8dp"
                                        android:layout_marginBottom="24dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:paddingStart="8dp"

                                            android:textStyle="bold"
                                            tools:ignore="MissingConstraints" />


                                    </androidx.constraintlayout.widget.ConstraintLayout>

                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginEnd="8dp">
                                        <androidx.appcompat.widget.AppCompatButton
                                            android:id="@+id/imgBtnStartHistory"
                                            android:layout_width="95dp"
                                            android:layout_height="48dp"
                                            android:background="@drawable/blue_button"
                                            android:text="시작하기"
                                            android:textColor="@color/white"
                                            android:textSize="14dp"
                                            android:textStyle="bold"
                                            app:layout_constraintEnd_toEndOf="parent"></androidx.appcompat.widget.AppCompatButton>
                                    </androidx.constraintlayout.widget.ConstraintLayout>
                                </LinearLayout>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
            <LinearLayout
                android:layout_weight="1"
                android:layout_marginTop="24dp"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#d9d9d9"
                android:orientation="vertical">
                <LinearLayout

                    android:background="@drawable/dropshadow"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/HomeLayout"
                        android:background="@drawable/gray_layout"
                        android:layout_weight="0.25"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/HomeImageView"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="@drawable/home_active"></ImageView>
                        <TextView
                            android:id="@+id/HomeTextView"
                            android:textAlignment="center"
                            android:textSize="14dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendardbold"
                            android:textColor="#0181F8"
                            android:text="홈"></TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/SrtLayout"
                        android:background="@drawable/gray_layout"
                        android:layout_weight="0.25"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/SrtImageView"
                            android:layout_marginTop="8dp"
                            android:layout_gravity="center"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="@drawable/pta"></ImageView>
                        <TextView
                            android:id="@+id/SrtTextView"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendardbold"
                            android:textColor="#A6A6A6"
                            android:textSize="14dp"
                            android:text="SRT 테스트"></TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/SrsLayout"
                        android:background="@drawable/gray_layout"
                        android:layout_weight="0.25"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/SrsImageView"
                            android:layout_marginTop="8dp"
                            android:layout_gravity="center"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="@drawable/wrs"></ImageView>
                        <TextView
                            android:id="@+id/SrsTextView"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendardbold"
                            android:textColor="#A6A6A6"
                            android:textSize="14dp"
                            android:text="SRS 테스트"></TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/TestLayout"
                        android:background="@drawable/gray_layout"
                        android:layout_weight="0.25"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/TestImageView"
                            android:layout_marginTop="8dp"
                            android:layout_gravity="center"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="@drawable/text"></ImageView>
                        <TextView
                            android:id="@+id/TestTextView"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendardbold"
                            android:textColor="#A6A6A6"
                            android:textSize="14dp"
                            android:text="My 테스트"></TextView>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>