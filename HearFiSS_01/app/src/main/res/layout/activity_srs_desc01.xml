<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.SRS.SrsDesc01Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"

            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="-1dp">
            <ImageButton
                android:id="@+id/imgBtnBack"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="start"
                android:layout_marginEnd="20dp"
                android:layout_weight="0"
                android:background="@color/white"
                android:padding="13dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/backbtn" />
            <LinearLayout
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/pretendardextrabold"
                    android:text="HearFi SS"
                    android:textAlignment="center"
                    android:textColor="@color/blue"
                    android:textSize="25dp"></TextView>
            </LinearLayout>

            <ImageButton
                android:id="@+id/imgBtnHome"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:layout_marginStart="20dp"
                android:layout_weight="0"
                android:background="@color/white"
                android:padding="13dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/homebtn" />
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/custom_gray_background"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/textView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"
                                    android:text="문장 인지도 테스트"
                                    android:fontFamily="@font/pretendardextrabold"
                                    android:textColor="@color/blue"
                                    android:textSize="22dp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                android:layout_marginTop="15dp"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="viewStart"
                                    android:text=" 문장 인지도 테스트(SRS, Sentence Recognition Score)는 일상 생활 속 의사소통 능력을 실제적으로 측정할 때 실시하는 테스트 입니다. "
                                    android:textSize="15dp"
                                    android:fontFamily="@font/pretendardmedium"
                                    android:textStyle="bold" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginBottom="15dp"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="viewStart"
                                    android:text=" 향후,의료 기관 및 청력 진단 전문 기관을 통하여\n청력 상태의 종합적인 평가를 받을 수 있고, 청력 손실의 종류 및 정도, 형태에 따라 보청기 또는 인공 와우 착용 여부를 알아보는 목적으로 사용할 수 있습니다."
                                    android:fontFamily="@font/pretendardmedium"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linearLayout3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/custom_gray_background"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:orientation="horizontal">
                                <TextView

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"
                                    android:text="문장 인지도 테스트 방법"
                                    android:fontFamily="@font/pretendardextrabold"
                                    android:textColor="@color/blue"
                                    android:textSize="22dp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                android:layout_marginTop="15dp"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="viewStart"
                                    android:text=" 문장 인지도 테스트(SRS, Sentence Recognition Score)는 조용한 공간에서 이어폰 또는 헤드폰을 착용하고 \n소리가 공기를 통해서 대상자의 귀로 전달되는 테스트 \n방법입니다."
                                    android:fontFamily="@font/pretendardmedium"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginBottom="15dp"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="viewStart"
                                    android:text=" 테스트는 오른쪽 귀에서 왼쪽 귀 순서로 실시합니다.\n사용자가 설정한 음량으로 테스트를 시작하고, 제시된 문장을 사용자가 듣고 이해한 내용을 응답하여 문장 인지도를 \n평가합니다."
                                    android:fontFamily="@font/pretendardmedium"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="30dp"
                        android:layout_marginTop="8dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/imgBtnSrsDesc01Next"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/blue_button"
                            android:text="계속"
                            android:textColor="@color/white"
                            android:textSize="17dp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="MissingConstraints"></androidx.appcompat.widget.AppCompatButton>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </ScrollView>
            <LinearLayout
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#d9d9d9"
                android:orientation="vertical">
                <LinearLayout
                    android:background="@drawable/dropshadow"
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/HomeLayout"
                        android:background="@drawable/gray_layout"
                        android:layout_weight="0.25"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/HomeImageView"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="@drawable/home"></ImageView>
                        <TextView
                            android:id="@+id/HomeTextView"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendardbold"
                            android:textColor="#A6A6A6"
                            android:textSize="14dp"
                            android:text="홈"></TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/SrtLayout"
                        android:background="@drawable/gray_layout"
                        android:layout_weight="0.25"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/SrtImageView"
                            android:layout_marginTop="8dp"
                            android:layout_gravity="center"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="@drawable/pta"></ImageView>
                        <TextView
                            android:id="@+id/SrtTextView"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendardbold"
                            android:textColor="#A6A6A6"
                            android:textSize="14dp"
                            android:text="SRT 테스트"></TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/SrsLayout"
                        android:background="@drawable/gray_layout"
                        android:layout_weight="0.25"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/SrsImageView"
                            android:layout_marginTop="8dp"
                            android:layout_gravity="center"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="@drawable/wrs_active"></ImageView>
                        <TextView
                            android:id="@+id/SrsTextView"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendardbold"
                            android:textColor="@color/blue"
                            android:textSize="14dp"
                            android:text="SRS 테스트"></TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/TestLayout"
                        android:background="@drawable/gray_layout"
                        android:layout_weight="0.25"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/TestImageView"
                            android:layout_marginTop="8dp"
                            android:layout_gravity="center"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="@drawable/text"></ImageView>
                        <TextView
                            android:id="@+id/TestTextView"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendardbold"
                            android:textColor="#A6A6A6"
                            android:textSize="14dp"
                            android:text="My 테스트"></TextView>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>
