<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.SRS.SrsDesc01Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"

            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="-1dp">
            <ImageButton
                android:id="@+id/imgBtnBack"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="start"
                android:layout_marginEnd="20dp"
                android:layout_weight="0"
                android:background="@color/white"
                android:padding="13dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/backbtn" />
            <LinearLayout
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/pretendardextrabold"
                    android:textColor="@color/blue"
                    android:textSize="25dp"
                    android:text="HearFi"></TextView>
            </LinearLayout>

            <ImageButton
                android:id="@+id/imgBtnHome"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:layout_marginStart="20dp"
                android:layout_weight="0"
                android:background="@color/white"
                android:padding="13dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/homebtn" />

        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linearLayout3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.588">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="32dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:orientation="vertical"
                            android:background="@drawable/custom_gray_background">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                android:layout_marginTop="16dp"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/textView"
                                    android:layout_width="match_parent"
                                    android:textAlignment="center"
                                    android:layout_height="wrap_content"
                                    android:text="문장 인지도 테스트"
                                    android:fontFamily="@font/pretendardextrabold"
                                    android:textColor="@color/blue"
                                    android:textSize="25dp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginBottom="16dp"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/SrsDesc01Text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    android:bufferType="spannable"
                                    android:fontFamily="@font/pretendardregular"
                                    android:text="문장 인지도 테스트(SRS, Word Recognition Score)는 소리 듣기에 아주 편안한 장소에서 한글자 단어(단음절어)를 듣고 얼마나 정확하게 들었는지 그 정확도를 평가하여 백분율로 점수화 하는 것입니다."
                                    tools:ignore="MissingConstraints">
                                </TextView>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/custom_edittext"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:layout_marginTop="24dp"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:background="@drawable/check_icon"></ImageView>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"
                                    android:textColor="@color/blue"
                                    android:text="문장 개수를 선택해 주세요!\n 개수가 많을수록 정확도가 좋아집니다"
                                    android:fontFamily="@font/pretendardregular"
                                    android:textSize="17dp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"

                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp">
                                <androidx.appcompat.widget.AppCompatToggleButton
                                    android:id="@+id/srs10"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/toggle_btn_custom"
                                    android:textOn="10개"
                                    android:textOff="10개"
                                    android:textColor="@color/gray"
                                    android:fontFamily="@font/pretendardregular"
                                    android:paddingTop="5dp"
                                    android:paddingBottom="5dp"
                                    android:textSize="21dp"
                                    android:textStyle="bold"
                                    tools:ignore="MissingConstraints"></androidx.appcompat.widget.AppCompatToggleButton>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"

                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp">
                                <androidx.appcompat.widget.AppCompatToggleButton
                                    android:id="@+id/srs20"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/toggle_btn_custom"
                                    android:textOn="20개"
                                    android:textOff="20개"
                                    android:textColor="@color/gray"
                                    android:fontFamily="@font/pretendardregular"
                                    android:paddingTop="5dp"
                                    android:paddingBottom="5dp"
                                    android:textSize="21dp"
                                    android:textStyle="bold"
                                    tools:ignore="MissingConstraints"></androidx.appcompat.widget.AppCompatToggleButton>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:layout_marginBottom="24dp"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp">
                                <androidx.appcompat.widget.AppCompatToggleButton
                                    android:id="@+id/srs25"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/toggle_btn_custom"
                                    android:textOn="25개"
                                    android:textOff="25개"
                                    android:textColor="@color/gray"
                                    android:fontFamily="@font/pretendardregular"
                                    android:paddingTop="5dp"
                                    android:paddingBottom="5dp"
                                    android:textSize="21dp"
                                    android:textStyle="bold"
                                    tools:ignore="MissingConstraints"></androidx.appcompat.widget.AppCompatToggleButton>
                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="8dp">
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/imgBtnSrsDesc01Next"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/gray_button"
                            android:text="계속"
                            android:clickable="false"
                            android:textColor="@color/white"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            tools:ignore="MissingConstraints"></androidx.appcompat.widget.AppCompatButton>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>

            </ScrollView>
            <LinearLayout
                android:layout_weight="1"
                android:layout_marginTop="24dp"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#d9d9d9"
                android:orientation="vertical">
                <LinearLayout
                    android:background="@drawable/dropshadow"
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/HomeLayout"
                        android:background="@drawable/gray_layout"
                        android:layout_weight="0.25"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/HomeImageView"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="@drawable/home"></ImageView>
                        <TextView
                            android:id="@+id/HomeTextView"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendardbold"
                            android:textColor="#A6A6A6"
                            android:textSize="14dp"
                            android:text="홈"></TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/PtaLayout"
                        android:background="@drawable/gray_layout"
                        android:layout_weight="0.25"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/SrtImageView"
                            android:layout_marginTop="8dp"
                            android:layout_gravity="center"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="@drawable/pta"></ImageView>
                        <TextView
                            android:id="@+id/SrtTextView"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendardbold"
                            android:textColor="#A6A6A6"
                            android:textSize="14dp"
                            android:text="PTA 테스트"></TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/WrsLayout"
                        android:background="@drawable/gray_layout"
                        android:layout_weight="0.25"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/SrsImageView"
                            android:layout_marginTop="8dp"
                            android:layout_gravity="center"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="@drawable/wrs_active"></ImageView>
                        <TextView
                            android:id="@+id/SrsTextView"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendardbold"
                            android:textColor="#0181F8"
                            android:textSize="14dp"
                            android:text="WRS 테스트"></TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/TestLayout"
                        android:background="@drawable/gray_layout"
                        android:layout_weight="0.25"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/TestImageView"
                            android:layout_marginTop="8dp"
                            android:layout_gravity="center"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="@drawable/text"></ImageView>
                        <TextView
                            android:id="@+id/TestTextView"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendardbold"
                            android:textColor="#A6A6A6"
                            android:textSize="14dp"
                            android:text="My 테스트"></TextView>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

